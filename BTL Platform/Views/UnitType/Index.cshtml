@model List<UnitType>

@{
    Layout = "~/Views/Shared/_Layout_Of_Us.cshtml";
    int counter = 1;
    ViewBag.Title = "Units Type";
    ViewBag.Nav = "Units_Type";
}

<div class="mt-5">
    <a asp-action="Create" asp-controller="UnitType" class="btn btn-success">New UnitType Item</a>
</div>

<div class="m-5">
    <h1>Unit Types</h1>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Unit Type Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unitType in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td>@unitType.UnitTypeName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@unitType.UnitTypeId" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@unitType.UnitTypeId" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
