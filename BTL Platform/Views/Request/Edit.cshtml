@model BTL_Platform.Models.Request
@{

    Layout = "~/Views/Shared/_Layout_Of_Us.cshtml";
    ViewBag.Title = "Edit Request";
    ViewBag.Nav = "Request";

}
@{
    //SelectList RequestTypesList = new SelectList(Model, "RequestTypeID", "TypeName");
    SelectList requesttypesList =
          new SelectList(ViewBag.RequestTypesList, "RequestTypeID", "TypeName");
}
<div>
    <h1>Edit Request</h1>

    <form asp-action="Edit" asp-route-id="@Model.RequestID" method="post">
        <div class="row">
            <div class="col-md-6">
                @Html.HiddenFor(model => model.Employee_Id)
                @*  <div class="form-group">
                <label asp-for="RequestDate" class="form-label">Request Date</label>
                <input asp-for="RequestDate" class="form-control" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
                </div> *@
                <div>
                    <label asp-for="CompanyName" class="form-label">Company Name:</label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName"></span>
                </div>
                <div>
                    <label asp-for="ClientEmail" class="form-label">Client Email:</label>
                    <input asp-for="ClientEmail" class="form-control" />
                    <span asp-validation-for="ClientEmail"></span>
                </div>
                <div>
                    <label asp-for="ClientMobile" class="form-label">Client Mobile:</label>
                    <input asp-for="ClientMobile" class="form-control" />
                    <span asp-validation-for="ClientMobile"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Channel" class="form-label">Channel</label>
                    <input asp-for="Channel" class="form-control" />
                    <span asp-validation-for="Channel" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Assignee" class="form-label">Assignee</label>
                    <input asp-for="Assignee" class="form-control" />
                    <span asp-validation-for="Assignee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WH_movements" class="form-label">WH Movements</label>
                    <input asp-for="WH_movements" class="form-control" />
                    <span asp-validation-for="WH_movements" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="form-label">Status</label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="Priority" class="form-label">Priority</label>
                    <input asp-for="Priority" class="form-control" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="POSNumber" class="form-label">POS Number</label>
                    <input asp-for="POSNumber" class="form-control" />
                    <span asp-validation-for="POSNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TrucksNeeded" class="form-label">Trucks Needed</label>
                    <input asp-for="TrucksNeeded" class="form-control" />
                    <span asp-validation-for="TrucksNeeded" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate" class="form-label">Start Date</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate" class="form-label">End Date</label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="RequestTypeID"></label>
                    <select class="form-control" asp-for="RequestTypeID" asp-items="requesttypesList">
                        @*  <option value="0">--Select Request--</option>*@
                    </select>
                    <span asp-validation-for="RequestTypeID" class="text-danger"></span>
                </div>

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-outline-primary float-right">Back to Request List</a>
            </div>
        </div>
    </form>
</div>





@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}