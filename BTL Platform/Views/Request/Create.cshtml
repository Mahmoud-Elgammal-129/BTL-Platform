@{
    Layout = "~/Views/Shared/_Layout_Of_Us.cshtml";
    ViewBag.Title = "New Request";
    ViewBag.Nav = "Request";
}
@model BTL_Platform.Models.Request
@{
    //SelectList RequestTypesList = new SelectList(Model, "RequestTypeID", "TypeName");
    SelectList requesttypesList =
          new SelectList(ViewBag.RequestTypesList, "RequestTypeID", "TypeName");
}
<h1>Create Request</h1>

<form asp-controller="Request" asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="RequestDate" class="form-label">Request Date</label>
                <input asp-for="RequestDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>

            @*<div class="form-group">
            <label asp-for="RequestDate" class="form-label">Request Date</label>
            <input asp-for="RequestDate" class="form-control" />
            <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Channel" class="form-label">Channel</label>
                <select asp-for="Channel" class="form-control">
                    <option value="">Select Channel</option> <!-- Default empty option -->
                    <option value="Option1">Option 1</option> <!-- Replace Option1 with your actual option value -->
                    <option value="Option2">Option 2</option> <!-- Replace Option2 with your actual option value -->
                    <option value="mahmoud">mahmoud</option> <!-- Replace Option2 with your actual option value -->
                    <!-- Add more <option> elements for each possible value -->
                </select>
                <span asp-validation-for="Channel" class="text-danger"></span>
            </div>
            @*  <div class="form-group">
            <label asp-for="Channel" class="form-label">Channel</label>
            <input asp-for="Channel" class="form-control" />
            <span asp-validation-for="Channel" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignee" class="form-label">Assignee</label>
                <select asp-for="Assignee" class="form-control">
                    <option value="">Select Assignee</option> <!-- Default empty option -->
                    <option value="JohnDoe">John Doe</option> <!-- Replace JohnDoe with actual assignee's value -->
                    <option value="JaneSmith">Jane Smith</option> <!-- Replace JaneSmith with actual assignee's value -->
                    <!-- Add more <option> elements for each possible assignee -->
                </select>
                <span asp-validation-for="Assignee" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <label asp-for="WH_movements" class="form-label">WH Movements</label>
                <select asp-for="WH_movements" class="form-control">
                    <option value="">Select Movement</option> <!-- Default empty option -->
                    <option value="Inbound">Inbound</option>
                    <option value="Outbound">Outbound</option>
                    <!-- Add more <option> elements for each possible movement -->
                </select>
                <span asp-validation-for="WH_movements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="">Select Status</option> <!-- Default empty option -->
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                    <!-- Add more <option> elements for each possible status -->
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>


            @*<div class="form-group">
            <label asp-for="Status" class="form-label">Status</label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
            </div>*@
        </div>

        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="Priority" class="form-label">Priority</label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="POSNumber" class="form-label">POS Number</label>
                <input asp-for="POSNumber" class="form-control" />
                <span asp-validation-for="POSNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OnGroundTeams" class="form-label">OnGround Teams</label>
                <select asp-for="OnGroundTeams" class="form-control">
                    <option value="">Select Team</option> <!-- Default empty option -->
                    <option value="TeamA">Team A</option> <!-- Replace TeamA with the actual team name -->
                    <option value="TeamB">Team B</option> <!-- Replace TeamB with the actual team name -->
                    <!-- Add more <option> elements for each possible team -->
                </select>
                <span asp-validation-for="OnGroundTeams" class="text-danger"></span>
            </div>

          

           
            <div class="form-group">
                <label asp-for="TrucksNeeded" class="form-label">Trucks Needed</label>
                <select asp-for="TrucksNeeded" class="form-control">
                    <option value="">Select Number of Trucks Needed</option> <!-- Default empty option -->
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <!-- Add more <option> elements for each possible number of trucks needed -->
                </select>
                <span asp-validation-for="TrucksNeeded" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="form-label">End Date</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="RequestTypeID"></label>
                <select class="form-control" asp-for="RequestTypeID" asp-items="requesttypesList">
                    <option value="0">--Select Request--</option>
                </select>
                <span asp-validation-for="RequestTypeID" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Employee_Id" />

          
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col">
            <a asp-action="Index" class="btn btn-outline-primary float-right">Back to Request List</a>
        </div>
    </div>
</form>



@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
