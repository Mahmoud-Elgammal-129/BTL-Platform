@model List<User>
@{
    int counter = 1;
}
@{
    Layout = "~/Views/Shared/_Layout_Of_Us.cshtml";

}
<div class="mt-5">
    <a asp-action="Create" asp-controller="User" class="btn btn-success">New User</a>
</div>

<div class="m-5">
    <h1>User</h1>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>UserId</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Team</th>
        
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Team</td>
                    
                   
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
