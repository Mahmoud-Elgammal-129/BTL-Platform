@model List<Unit>
@{
    int counter = 1;
}
@{
    Layout = "~/Views/Shared/_Layout_Of_Us.cshtml";
    ViewBag.Title = "Units";
    ViewBag.Nav = "Units";
}

<nav class="navbar p-0 shadow-none">
    <div class="container-fluid m-0 p-0">
        <a asp-action="Create" asp-controller="Unit" class="btn btn-success m-0">New Unit Item</a>

    </div>
</nav>
<div class="">
    <h1>Unit </h1>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Unit  Name</th>
                <th>Unit Number</th>
                <th>Unit Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unit in Model)
            {
                <tr>
                    <td>@(counter++)</td>
                    <td>@unit.UnitName</td>
                    <td>@unit.UnitNumber</td>
                    <td>@unit.Count</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@unit.UnitId" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@unit.UnitId" class="btn btn-outline-danger">Delete</a>
                        <a asp-action="Index" asp-controller="UnitDetail" asp-route-id="@unit.UnitId" class="btn btn-outline-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
