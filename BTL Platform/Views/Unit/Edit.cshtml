@model BTL_Platform.Models.Unit
@{

    Layout = "~/Views/Shared/_Layout_Of_Us.cshtml";
    ViewBag.Title = "Edit Units";
    ViewBag.Nav = "Units";
}
@{



}
<div>
    <h1>Edit Unit</h1>

    <form asp-action="Edit" asp-route-id="@Model.UnitId" method="post">
        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="UnitName" class="form-label">UnitName</label>
                    <input asp-for="UnitName" class="form-control" />
                    <span asp-validation-for="UnitName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UnitNumber" class="form-label">UnitNumber</label>
                    <input asp-for="UnitNumber" class="form-control" />
                    <span asp-validation-for="UnitNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Count" class="form-label">Count</label>
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-outline-primary float-right">Back to unit List</a>
            </div>
        </div>
    </form>
</div>
@section scripts{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}




