@model BTL_Platform.Models.Inventory
@{
    Layout = "~/Views/Shared/_Layout_Of_Us.cshtml";
}
<div class="container mt-5">
    <h1>Create Inventory Item</h1>
    <form asp-controller="Inventory" asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ItemName" class="form-label">Item Name</label>
                    <input asp-for="ItemName" class="form-control" />
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="count" class="form-label">Count</label>
                    <input asp-for="count" class="form-control" />
                    <span asp-validation-for="count" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="form-label">Status</label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>


            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-outline-primary float-right">Back to Inventory List</a>
            </div>
        </div>
    </form>
</div>
