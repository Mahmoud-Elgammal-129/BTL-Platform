@model BTL_Platform.ViewModels.RegisterVM;

@{
    Layout = "~/Views/Shared/_Layout_Of_Us.cshtml";
    ViewBag.Title = " Employee";
    ViewBag.Nav = "Add Employee";
}
<div class="card-body">
    <form role="form text-left" asp-action="RegisterEmployee" method="post">
        <div class="mb-3">
            <input asp-for="UserName" class="form-control" placeholder="User Name" aria-label="Email" aria-describedby="email-addon" />


        </div>
        <div class="mb-3">
            <input asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon" />

        </div>
        <div class="mb-3">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Email" aria-describedby="email-addon" />

        </div>
        <div class="form-check form-check-info text-left">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
            <label class="form-check-label" for="flexCheckDefault">
                I agree the <a href="javascript:;" class="text-dark font-weight-bolder">Terms and Conditions</a>
            </label>
        </div>
        <div class="text-center">
            <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Add Employee</button>
        </div>
    </form>
</div>
